# leaps in feburuary  
def check_leap_year():
    # Ask the user to enter the year
    year = int(input("Enter a year: "))
    
    # check if a leap year
    if (year % 100 == 0 and year % 400 == 0) or (year % 100 != 0 and year % 4 == 0):
        print(f"February in the year {year} has 29 days (Leap Year).")
    else:
        print(f"February in the year {year} has 28 days.")

# run functions
check_leap_year()
