# Function to display the Roman numeral 
def display_roman_numeral():
    # Dictionary mapping numbers to Roman numerals
    roman_numerals = {
        1: "I",
        2: "II",
        3: "III",
        4: "IV",
        5: "V",
        6: "VI",
        7: "VII",
        8: "VIII",
        9: "IX",
        10: "X"
    }
    
    # Prompt the user for input
    number = int(input("Enter a number between 1 and 10: "))
    
    # Check if the number is within the valid range
    if 1 <= number <= 10:
        # Display the corresponding Roman numeral
        print(f"The Roman numeral for {number} is {roman_numerals[number]}")
    else:
        # Display an error message if the number is not valid
        print("Error: The number must be between 1 and 10.")

# function to execute 
display_roman_numeral()
