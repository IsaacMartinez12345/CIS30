# wifi trouble shooting
def troubleshoot_wifi():
    print("Reboot the computer and try to connect.")
    response = input("Did that fix the problem? (yes/no): ").strip().lower()

    if response == "yes":
        print("Great! The problem is fixed.")
    else:
        print("Reboot the router and try to connect.")
        response = input("Did that fix the problem? (yes/no): ").strip().lower()

        if response == "yes":
            print("Great! The problem is fixed.")
        else:
            print("Make sure the cables between the router & modem are plugged in firmly.")
            response = input("Did that fix the problem? (yes/no): ").strip().lower()

            if response == "yes":
                print("Great! The problem is fixed.")
            else:
                print("Move the router to a new location and try to connect.")
                response = input("Did that fix the problem? (yes/no): ").strip().lower()

                if response == "yes":
                    print("Great! The problem is fixed.")
                else:
                    print("Get a new router.")

# function to run
troubleshoot_wifi()
