# books purchased
def calculate_points():
    # Prompt the user for the number of books purchased
    num_books = int(input("Enter the number of books purchased this month: "))
    
    # Determine the number of points 
    if num_books == 0:
        points = 0
    elif num_books == 2:
        points = 5
    elif num_books == 4:
        points = 15
    elif num_books == 6:
        points = 30
    elif num_books >= 8:
        points = 60
    else:
        points = 0
    
    # points earned
    print(f"You earned {points} points.")

#functions runs
calculate_points()
